<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.Controller">

    <top>
        <VBox>
            <BorderPane fx:id="titleBox" onMousePressed="#titlePressed" onMouseDragged="#titleDragged">
                <left>
                    <Label fx:id="titleLabel" text="GB Chat"/>
                </left>
                <right>
                    <HBox alignment="CENTER_RIGHT" prefHeight="25.0">
                        <Button fx:id="btnMinimize" onAction="#minimize" prefHeight="25.0" prefWidth="30.0"
                                styleClass="btnControl" text="_"/>
                        <Button fx:id="btnFullScreen" onAction="#maximize" prefHeight="25.0" prefWidth="30.0"
                                styleClass="btnControl" text="â–¬"/>
                        <Button fx:id="bntClose" onAction="#exitChat" prefHeight="25.0" prefWidth="30.0"
                                styleClass="btnControl" text="X"/>
                    </HBox>
                </right>
            </BorderPane>

            <MenuBar fx:id="menuTop">
                <Menu text="Chat">
                    <MenuItem fx:id="mClear" disable="true" onAction="#clearChat" text="_Clear window"/>
                    <MenuItem fx:id="mNick" disable="true" onAction="#changeNick" text="Change nickname"/>
                    <SeparatorMenuItem/>
                    <MenuItem onAction="#exitChat" text="Close"/>
                </Menu>
                <Menu text="Change skin">
                    <RadioMenuItem onAction="#setStyle" selected="true" text="Light">
                        <toggleGroup>
                            <ToggleGroup fx:id="skinsGroup"/>
                        </toggleGroup>
                    </RadioMenuItem>
                    <RadioMenuItem onAction="#setStyle" text="Dark" toggleGroup="$skinsGroup"/>
                    <RadioMenuItem onAction="#setStyle" text="Lime" toggleGroup="$skinsGroup"/>
                </Menu>
                <Menu text="About">
                    <MenuItem fx:id="mAbout" disable="true" onAction="#aboutWindow" text="About"/>
                </Menu>
            </MenuBar>
        </VBox>
    </top>

    <center>
        <StackPane>
            <TextArea fx:id="taChat" disable="true" editable="false"/>
            <VBox fx:id="vboxNickname" alignment="CENTER" maxHeight="70.0" maxWidth="250.0">
                <Label fx:id="lblNickname" text="Enter your nickname"/>
                <TextField fx:id="tfNickname" maxWidth="200" onAction="#setNickname"/>
                <Button fx:id="btnOk" maxWidth="150" onAction="#setNickname" styleClass="btnNotControl" text="OK"/>
            </VBox>
            <VBox fx:id="vboxAbout" alignment="CENTER" maxHeight="70.0" maxWidth="150.0" visible="false">
                <Label text="GB Chat"/>
                <Label text="2019"/>
                <Label text=" "/>
                <Button onAction="#aboutWindowClose" styleClass="btnNotControl" text="Close"/>
            </VBox>
        </StackPane>
    </center>

    <bottom>
        <BorderPane BorderPane.alignment="CENTER">
            <right>
                <Button fx:id="btnSend" disable="true" onAction="#sendMsg" styleClass="btnNotControl" text="Send"/>
            </right>
            <center>
                <TextField fx:id="tfMessage" disable="true" onAction="#sendMsg"/>
            </center>
        </BorderPane>
    </bottom>
</BorderPane>
